<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studios.entropy.nojusticenopeace" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".NJNPActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".NJNPBackgroundService"
            android:exported="false" >
        </service>

        <receiver android:name=".NJNPBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <activity
            android:name=".NJNPVideoCaptureActivity"
            android:label="@string/title_activity_video_capture" >
        </activity>

        <service
            android:name=".helpers.VideoRecorderService"
            android:label="VideoRecorderService" >
        </service>
    </application>

</manifest>
